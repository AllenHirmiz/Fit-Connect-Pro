<!-- Modal Button -->

<div class='row'>
  <h4>Login</h4>
  <div class='col s6'>
    <form class='form log-form'>
      <div class='row'>
        <div class='input-field col s12'>
          <input id='email-login' type='email' class='validate' />
          <label for='email-login'>email</label>
        </div>
        <div class='input-field col s12'>
          <input id='password-login' type='text' class='validate' />
          <label for='password-login'>password</label>
        </div>
        <div class='input-field col s12'>
          <button
            type='submit'
            class='waves-effect waves-light btn'
          >Login</button>
        </div>
        {{!-- future development to build another page for reset password--}}
        <div class='input-field col s12'>
          <a href='#'>forgot password?</a> 
        </div>

      </div>
    </form>
  </div>
</div>