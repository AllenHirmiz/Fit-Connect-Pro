<div class='container'>
  <div class='row profile'>
    <div class='col s12 m6 l6'>
      <h4>{{first_name}}'s Profile </h4><br/><br/>
      <div class='jcc'>
        <div class='fit-form'>
          <form class='update-profile-form'>
            <div>
              <input type='hidden' id='id' value='{{id}}' />
              <div class='input-field'>
                <input id='first_name' type='text' class='validate' value='{{first_name}}' />
                <label for='first_name'>first name</label>
              </div>

              <div class='input-field'>
                <input id='last_name' type='text' class='validate' value='{{last_name}}' />
                <label for='last_name'>last name</label>
              </div>

              <div class='input-field'>
                <input id='email' type='email' class='validate' value='{{email}}' />
                <label for='email'>email</label>
              </div>

              <div class='input-field'>
                <input id='mobile' type='text' class='validate' value='{{mobile}}' />
                <label for='mobile'>mobile</label>
              </div>

              <div class='input-field'>
                <button type='update' class='waves-effect waves-light btn findbtn'>Update Profile
                </button>
              </div>

            </div>

          </form>
        </div>
      </div><br /><br /><br/>

      <h4>Add Activity</h4>
      <div class='jcc'>
        <div class='fit-form'>
          <form class='add-activity-form'>
            <div class='input-field'>
              <input id='activity-name' type='text' class='validate' />
              <label for='activity-name'>new activity</label>
            </div>
            <div class='input-field'>
              <input id='activity-date' type='date' class = 'datepicker' />
              <label for='activity-date'>new activity</label>
            </div>
            <div class='input-field'>
              <input id='activity-duration' type='text' class='validate' value='1'/>
              <label for='activity-duration'>duration</label>
            </div>
            <div class='input-field'>  
              <button type='update' class='waves-effect waves-light btn findbtn'>Add Activity</button>
            </div>
        </div>
        </form>
      </div>
    </div>

    <div class='col s12 m6 l6'>

      {{#if activities.length}}
      <h4>Current Activities:</h4><br /><br/>
      <div class='activity-list'>
        <table>
          <tr>
            <th>Date</th>
            <th>Activity</th>
            <th></th>
          </tr>

          {{#each activities as |activity|}}
          <tr class='saved-activies'>

            <td id='{{activity.id}}'>{{activity.date_start}}</td>
            <td>
              {{activity.name}}</td>
            <td><i class='activity-icon material-icons small button-delete' data-id='{{activity.id}}'>delete</i></td>
          </tr>
          {{/each}}

        </table>
      </div>
      {{/if}}
    </div>
  </div>
</div>
</div>
<script src='./js/profile.js'></script>